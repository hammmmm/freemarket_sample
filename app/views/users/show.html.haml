        = link_to destroy_user_session_path, method: :delete do
          %p.table-item
            ログアウト
            = icon('fas', 'chevron-right', class:'chevron')
  .mypage__contents
    = link_to "#" do
      .mypage__contents__name
        = image_tag("/material/icon/member_photo_noimage_thumb.png",height:60, width:60)
        %h2=current_user.profile.nickname
        .number
          評価
          %span.bold 0
          出品数
          %span.bold 0
    .mypage__contents__items
      %h2 &emsp;購入した商品
      .tabs
        %ul.content
          商品がありません
