          %p.table-item
            いいね！一覧
            = icon('fas', 'chevron-right', class:'chevron')
      %li
        = link_to new_item_path do
          %p.table-item
            出品する
            = icon('fas', 'chevron-right', class:'chevron')
      %li
        = link_to "#" do
          %p.table-item
            下書き一覧
            = icon('fas', 'chevron-right', class:'chevron')
      %li
        = link_to "#" do
          %p.table-item
            出品した商品 - 出品中
            = icon('fas', 'chevron-right', class:'chevron')
      %li
        = link_to "#" do
          %p.table-item
