      %li
        = link_to "#" do
          %p.table-item
            購入した商品 - 過去の取引
            = icon('fas', 'chevron-right', class:'chevron')
      %li
        = link_to "#" do
          %p.table-item
            評価一覧
            = icon('fas', 'chevron-right', class:'chevron')
